<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th class="<% if @sort_by == "title" %><%= "hilite p-3 mb-2 bg-warning text-dark"%><% end %>">
        <%= link_to "Movie Title", movies_path(:sort_by => :title, :ratings => @ratings_to_show) %>
      </th>
      <th>Rating</th>
      <th class="<% if @sort_by == "release_date" %><%= "hilite p-3 mb-2 bg-warning text-dark"%><% end %>">
        <%= link_to "Release Date", movies_path(:sort_by => :release_date, :ratings => @ratings_to_show) %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
